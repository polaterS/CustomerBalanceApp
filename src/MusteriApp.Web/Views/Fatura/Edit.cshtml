@model MusteriApp.Data.Entities.Fatura

<h2>Fatura Düzenle</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="MUSTERI_ID" class="control-label"></label>
        <input asp-for="MUSTERI_ID" class="form-control" />
        <span asp-validation-for="MUSTERI_ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FATURA_TARIHI" class="control-label"></label>
        <input asp-for="FATURA_TARIHI" class="form-control" type="date" />
        <span asp-validation-for="FATURA_TARIHI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FATURA_TUTARI" class="control-label"></label>
        <input asp-for="FATURA_TUTARI" class="form-control" />
        <span asp-validation-for="FATURA_TUTARI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ODEME_TARIHI" class="control-label"></label>
        <input asp-for="ODEME_TARIHI" class="form-control" type="date" />
        <span asp-validation-for="ODEME_TARIHI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
