@model MusteriApp.Data.Entities.Fatura

<h2>Fatura Sil</h2>

<h3>Bu faturayı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Fatura ID: @Model.ID</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri ID
        </dt>
        <dd class="col-sm-10">
            @Model.MUSTERI_ID
        </dd>
        <dt class="col-sm-2">
            Fatura Tarihi
        </dt>
        <dd class="col-sm-10">
            @Model.FATURA_TARIHI.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Fatura Tutarı
        </dt>
        <dd class="col-sm-10">
            @Model.FATURA_TUTARI
        </dd>
        <dt class="col-sm-2">
            Ödeme Tarihi
        </dt>
        <dd class="col-sm-10">
            @Model.ODEME_TARIHI?.ToShortDateString()
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>
</form>
